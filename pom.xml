<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.develar</groupId>
  <artifactId>fastutil-min-builder</artifactId>
  <version>8.3.1-4</version>
  <dependencies>
    <dependency>
      <groupId>it.unimi.dsi</groupId>
      <artifactId>fastutil</artifactId>
      <version>8.3.1</version>
      <classifier>sources</classifier>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>build</id>
            <phase>compile</phase>
            <configuration>
              <target>
                <mkdir dir="out"/>
                <get src="https://repo1.maven.org/maven2/it/unimi/dsi/fastutil/8.3.1/fastutil-8.3.1.jar" dest="out/fastutil.jar"/>
                <exec executable="./find-deps.sh" failonerror="true">
                  <arg value="out/fastutil.jar"/>
                  <arg value="dependencies.txt"/>
                </exec>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>